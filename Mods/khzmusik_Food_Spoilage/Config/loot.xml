<?xml version="1.0" encoding="UTF-8"?>
<configs>
    <!--
        Preserved Foods
    -->
    <append xpath="//lootgroup[@name='cannedfood']">
        <item name="foodCanCorn" />
        <item name="foodCanPotato" />
        <item name="foodCanPumpkin" />
        <item name="foodCanMushrooms" />
        <item name="foodPreservedBlueberries" />
    </append>
    <append xpath="//lootgroup[@name='groupDumpsterFood']">
        <item name="foodCanCorn" />
        <item name="foodCanPotato" />
        <item name="foodCanPumpkin" />
        <item name="foodCanMushrooms" />
        <item name="foodPreservedBlueberries" />
    </append>
    <append xpath="//lootgroup[@name='groupFoodCommon']">
        <item name="foodCanCorn" />
        <item name="foodCanPotato" />
        <item name="foodCanPumpkin" />
        <item name="foodCanMushrooms" />
        <item name="foodPreservedBlueberries" />
    </append>
    <append xpath="//lootgroup[@name='groupFoodPileCommon']">
        <item name="foodCanCorn" />
        <item name="foodCanPotato" />
        <item name="foodCanPumpkin" />
        <item name="foodCanMushrooms" />
        <item name="foodPreservedBlueberries" />
    </append>
    <append xpath="//lootgroup[@name='groupFoodUncommon']">
        <item name="foodPreservedPie" />
    </append>

    <!-- Replace spoilable foods in loot, supply multiple preserved foods to make up for it -->
    <set xpath="//lootgroup[@name='groupFoodRare']">
        <item name="foodPreservedPie" count="2,3" />
        <item name="foodCanBeef" count="3,4" />
        <item name="foodCanSham" count="3,4" />
        <item name="foodCanChili" count="4,5" />
    </set>
    <set xpath="//lootgroup[starts-with(@name, 'groupFood')]/item[@name='foodCharredMeat']/@name">foodPreservedMeat</set>
    <set xpath="//lootgroup[@name='groupOven01']/item[@name='foodCharredMeat']/@name">foodPreservedMeat</set>
    <set xpath="//lootgroup[@name='groupGrills']/item[@name='foodCharredMeat']/@name">foodPreservedMeat</set>
    <set xpath="//lootgroup[@name='groupGrills']/item[@name='foodGrilledMeat']/@name">foodPreservedMeat</set>

    <!-- Beer lasts longer, so don't entirely remove it, just spawn it at a lower probability -->
    <set xpath="//lootgroup[@name='groupDrinksUncommon']/item[@name='drinkJarBeer']/@name">drinkJarIPA</set>
    <append xpath="//lootgroup[@name='groupDrinksUncommon']">
        <item name="drinkJarBeer" loot_prob_template="medLow" />
    </append>
    <set xpath="//lootgroup[@name='groupBeerCooler01']/item[@name='drinkJarBeer']/@name">drinkJarIPA</set>
    <append xpath="//lootgroup[@name='groupBeerCooler01']">
        <item name="drinkJarBeer" loot_prob_template="medLow" />
    </append>
    <set xpath="//lootgroup[@name='groupLiquorBonus']/item[@name='drinkJarBeer']/@name">drinkJarIPA</set>
    <append xpath="//lootgroup[@name='groupLiquorBonus']">
        <item name="drinkJarBeer" count="1" loot_prob_template="medLow" />
    </append>
</configs>